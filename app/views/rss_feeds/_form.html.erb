<%= form_with(model: rss_feed) do |form| %>
  <% if rss_feed.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(rss_feed.errors.count, "error") %> prohibited this rss_feed from being saved:</h2>

      <ul>
        <% rss_feed.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row g-3 align-items-center">
    <div class="col-md-1">
        <%= form.label :title, class: "form-label-col" %>
    </div>
    <div class="col-auto">
        <%= form.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="row g-3 align-items-center">
      <div class="col-md-1">
          <%= form.label :url, class: "form-label-col" %>
      </div>
      <div class="col-auto">
          <%= form.text_field :url, class: "form-control" %>
      </div>
  </div>

  <div class="button-toolbar mt-2">
    <%= form.submit "Save", class: 'btn btn-primary' %>
    <%= link_to "Back to RSS Feeds", rss_feeds_path, class: 'btn btn-danger' %>
  </div>
<% end %>
